{
  "name": "@spotlight/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "src/export.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsup --format esm --treeshake --splitting",
    "generate": "drizzle-kit generate:pg",
    "generate:custom": "drizzle-kit generate:pg",
    "db:push": "tsx src/migrate.ts --clear-screen=false"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/node": "^20.3.1",
    "drizzle-kit": "^0.18.1",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@trpc/server": "^10.30.0",
    "consola": "^3.1.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.26.5",
    "jose": "^4.14.4",
    "postgres": "^3.3.5",
    "resend": "^0.15.1",
    "ulid": "^2.3.0",
    "zod": "^3.21.4"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts"
    },
    "outDir": "dist",
    "clean": true,
    "treeshake": true,
    "splitting": true
  }
}